<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="5dp">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view1"
        android:layout_width="wrap_content"
        android:layout_height="230dp"

        android:scaleType="fitCenter"
        android:src="@drawable/namecard1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view2"
        android:layout_width="wrap_content"
        android:layout_height="230dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="108dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/photo_view1"
        android:src="@drawable/namecard2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"

        android:layout_alignParentBottom="true"

        android:background="#ffffff"
        android:orientation="horizontal"

        android:weightSum="100">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="5dp"
        android:layout_weight="25"
        android:layout_height="match_parent"

        android:id="@+id/cardView1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orange_1"
            android:elevation="3dp"
            android:onClick="GoToGoodLivingWebsite"
            android:padding="3dp"

            android:translationZ="3dp"
            android:id="@+id/imH1"/>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="25"
            android:layout_height="match_parent"

            android:id="@+id/cardView2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_1"
                android:elevation="3dp"
                android:onClick="GoToGoodLivingFB"
                android:padding="3dp"

                android:translationZ="3dp"
                android:id="@+id/imH2"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="25"
            android:layout_height="match_parent"

            android:id="@+id/cardView3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/orange2_1"
                android:elevation="3dp"
                android:onClick="GoToGoodLivingBackpackWebsite"
                android:padding="3dp"

                android:translationZ="3dp"
                android:id="@+id/imH3"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="25"
            android:layout_height="match_parent"

            android:id="@+id/cardView4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue2_1"
                android:elevation="3dp"
                android:onClick="GoToGoodLivingBackpackFB"
                android:padding="3dp"

                android:translationZ="3dp"
                android:id="@+id/imH4"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>